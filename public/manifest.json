{
    "manifest_version": 3,
    "name": "AdFriend - Replace Ads with Positivity",
    "version": "1.0",
    "description": "Replaces ads with motivational quotes and activity reminders.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  